<Window x:Class="BookVault.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookVault.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel lateral izquierdo -->
        <Border Grid.Column="0" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0">

            <StackPanel Margin="10">

                <!-- Encabezado del panel lateral -->
                <TextBlock Text="Biblioteca"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,10,0,30"
                           HorizontalAlignment="Center"/>

                <!-- Botón Catálogo -->
                <Button x:Name="btnCatalogo"
                        Content="Catálogo"
                        Command="{Binding CatalogCommand}"
                        Height="40"
                        Margin="0,0,0,10"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="15,0,0,0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8E8E8"/>
                                    <Setter Property="Foreground" Value="#000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Botón Registro -->
                <Button x:Name="btnRegistro"
                        Content="Registro"
                        Command="{Binding RegisterCommand}"
                        Height="40"
                        Margin="0,0,0,10"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="15,0,0,0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8E8E8"/>
                                    <Setter Property="Foreground" Value="#000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Espacio flexible para empujar elementos hacia abajo -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <Separator Margin="0,0,0,10"/>
                    <TextBlock Text="v1.0.0"
                               FontSize="10"
                               Foreground="#999999"
                               HorizontalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Área de contenido principal -->
        <ContentControl Grid.Column="1" 
                        Content="{Binding Current}"
                        Margin="10"/>

    </Grid>
</Window>
