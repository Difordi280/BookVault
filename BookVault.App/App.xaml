<Application x:Class="BookVault.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookVault.App"
             xmlns:vms="clr-namespace:BookVault.App.ViewModels"
             xmlns:views="clr-namespace:BookVault.App.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vms:BookListViewModel}">
                <views:BookListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:BookRegisterViewModel}">
                <views:BookRegisterView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>