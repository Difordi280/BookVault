<UserControl x:Class="BookVault.App.Views.BookRegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="380"
             MinHeight="380" MinWidth="320">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="FieldContainer" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,25"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="MaxWidth" Value="350"/>
        </Style>

        <Style x:Key="FormButton" TargetType="Button">
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Estilo para deshabilitar el error template por defecto -->
        <Style TargetType="hc:TextBox" BasedOn="{StaticResource {x:Type hc:TextBox}}">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
        </Style>

        <Style TargetType="hc:ComboBox" BasedOn="{StaticResource {x:Type hc:ComboBox}}">
            <Setter Property="Validation.ErrorTemplate" Value="{x:Null}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Grid.Row="0" 
                Background="{DynamicResource RegionBrush}" 
                CornerRadius="4"
                Padding="15,10"
                Margin="0,0,0,15">
            <TextBlock Text="Añadir Nuevo Libro"
                       FontSize="16"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Formulario - Versión CON scroll siempre -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Top"
                      Height="280"
                      Padding="0,0,5,0">
            <StackPanel HorizontalAlignment="Center" MinWidth="250">

                <!-- Campo Título -->
                <StackPanel Style="{StaticResource FieldContainer}">
                    <hc:TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                hc:InfoElement.Title="Título del Libro"
                                hc:InfoElement.Placeholder="Ej: Cien años de soledad"
                                hc:InfoElement.TitleWidth="100"
                                Width="280"
                                Validation.ErrorTemplate="{x:Null}"/>
                </StackPanel>

                <!-- Campo Autor -->
                <StackPanel Style="{StaticResource FieldContainer}">
                    <hc:TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                                hc:InfoElement.Title="Autor"
                                hc:InfoElement.Placeholder="Ej: Gabriel García Márquez"
                                hc:InfoElement.TitleWidth="100"
                                Width="280"
                                Validation.ErrorTemplate="{x:Null}"/>
                </StackPanel>

                <!-- Campo ISBN -->
                <StackPanel Style="{StaticResource FieldContainer}">

                    <!-- Solo MOSTRAR error cuando hay un error real -->
                    <hc:TextBox x:Name="IsbnTextBox"
                                Text="{Binding Isbn, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                hc:TitleElement.Title="ISBN"
                                hc:InfoElement.Placeholder="Solo números"
                                hc:TitleElement.TitleWidth="100"
                                Width="280"
                                Validation.ErrorTemplate="{x:Null}"/>

                    <!-- Solo MOSTRAR error cuando hay un error real -->
                    <Border x:Name="IsbnErrorBorder"
                            Background="#FFF8F8F8" 
                            CornerRadius="3" 
                            Padding="8,5"
                            Margin="0,5,0,0"
                            Visibility="{Binding (Validation.HasError), Converter={StaticResource BoolToVis}, ElementName=IsbnTextBox}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" 
                                       FontSize="12" 
                                       Margin="0,0,5,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=IsbnTextBox}"
                                       Foreground="#D32F2F" 
                                       FontSize="11" 
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Campo Categoría -->
                <StackPanel Style="{StaticResource FieldContainer}">
                    <hc:ComboBox x:Name="CategoryCombo"
                                 ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="Name" 
                                 hc:InfoElement.Title="Categoría"
                                 hc:InfoElement.Placeholder="Selecciona una categoría"
                                 hc:InfoElement.TitleWidth="100"
                                 Width="280"
                                 Validation.ErrorTemplate="{x:Null}"/>

                    <!-- Solo para categoría si necesitas validación, pero por ahora no mostramos -->
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="0,15,0,0" 
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Guardar Libro"
                        Command="{Binding NewBookEntryCommand}"
                        Style="{StaticResource FormButton}"
                        Background="#2196F3" 
                        BorderBrush="#1976D2" 
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>